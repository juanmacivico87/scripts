    "version": "0.2.0",
    "configurations": [
        {
            "name": "PHP: Browser",
            "type": "php",
            "request": "launch",
            "port": 9900
        },
        {
            "name": "PHP: Terminal",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9900
        },
        {
            "name": "Python: Integrated Terminal",
            "type": "python",
            "request": "launch",
            "python": "/usr/bin/python3",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Django: Integrated Terminal",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver"
            ],
            "django": true
        }
    ]
}